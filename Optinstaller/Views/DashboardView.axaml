<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Optinstaller.ViewModels"
             xmlns:models="using:Optinstaller.Models"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Optinstaller.Views.DashboardView"
             x:DataType="vm:DashboardViewModel">

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="20" Spacing="10" Orientation="Horizontal">
            <TextBlock Text="Installed Games" Theme="{StaticResource TitleTextBlockStyle}" VerticalAlignment="Center"/>
            <Button Content="Add Game" Click="AddGame_Click" Margin="20,0,0,0"/>
        </StackPanel>

        <!-- Game List -->
        <ScrollViewer Grid.Row="1" Padding="20">
            <ItemsControl ItemsSource="{Binding Games}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="models:GameInstance">
                        <Border Width="280" Margin="0,0,20,20" 
                                CornerRadius="8" Background="{DynamicResource SurfaceStrokeColorDefaultBrush}"
                                BorderThickness="1" BorderBrush="{DynamicResource SurfaceStrokeColorFlyoutBrush}">
                            <Grid RowDefinitions="Auto,*,Auto" Margin="15">
                                <StackPanel Grid.Row="0" Spacing="5" Margin="0,0,0,15">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding GamePath}" FontSize="11" Opacity="0.6" TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                                <!-- Status Info -->
                                <StackPanel Grid.Row="1" Orientation="Vertical" Spacing="5" Margin="0,0,0,15">
                                    <StackPanel Orientation="Horizontal" Spacing="10" IsVisible="{Binding IsInstalled}">
                                        <Border CornerRadius="4" Padding="6,2" Background="{DynamicResource SystemFillColorSuccessBrush}">
                                            <TextBlock Text="Installed" FontSize="11" Foreground="White"/>
                                        </Border>
                                        <TextBlock Text="{Binding InstalledFilename}" VerticalAlignment="Center" FontSize="11" Opacity="0.7"/>
                                    </StackPanel>
                                    <TextBlock Text="Not Installed" IsVisible="{Binding !IsInstalled}" FontSize="11" Opacity="0.5"/>
                                </StackPanel>

                                <!-- Actions -->
                                <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10">
                                    <Button Content="Install" Classes="accent" 
                                            Command="{Binding $parent[UserControl].((vm:DashboardViewModel)DataContext).InstallOptiScalerCommand}"
                                            CommandParameter="{Binding}"
                                            IsVisible="{Binding !IsInstalled}"/>
                                    
                                    <Button Content="Uninstall" 
                                            Command="{Binding $parent[UserControl].((vm:DashboardViewModel)DataContext).UninstallOptiScalerCommand}"
                                            CommandParameter="{Binding}"
                                            IsVisible="{Binding IsInstalled}"/>

                                    <Button Content="Config" 
                                            Command="{Binding $parent[UserControl].((vm:DashboardViewModel)DataContext).ConfigureGameCommand}"
                                            CommandParameter="{Binding}"
                                            IsVisible="{Binding IsInstalled}"/>
                                </StackPanel>

                                <!-- Top Right Remove Button -->
                                <Button Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top"
                                        Command="{Binding $parent[UserControl].((vm:DashboardViewModel)DataContext).RemoveGameCommand}"
                                        CommandParameter="{Binding}"
                                        Theme="{DynamicResource TransparentButtonTheme}"
                                        Padding="5" Margin="0,-5,-5,0">
                                    <ui:SymbolIcon Symbol="Dismiss" FontSize="12"/>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>