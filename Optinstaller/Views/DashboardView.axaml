<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Optinstaller.ViewModels"
             xmlns:models="using:Optinstaller.Models"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Optinstaller.Views.DashboardView"
             x:DataType="vm:DashboardViewModel">

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="24,24,24,12">
            <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                <ui:SymbolIcon Symbol="Library" FontSize="24"/>
                <TextBlock Text="Library" Theme="{StaticResource TitleTextBlockStyle}" VerticalAlignment="Center"/>
            </StackPanel>
            
            <Button Grid.Column="1" Click="AddGame_Click" Classes="accent">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <ui:SymbolIcon Symbol="Add" FontSize="16"/>
                    <TextBlock Text="Add Game" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Game List -->
        <ScrollViewer Grid.Row="1" Padding="24,12,24,24">
            <ItemsControl ItemsSource="{Binding Games}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="models:GameInstance">
                        <Border Width="240" Height="340" Margin="0,0,20,20" 
                                CornerRadius="8" Background="{DynamicResource SurfaceStrokeColorDefaultBrush}"
                                BorderThickness="1" BorderBrush="{DynamicResource SurfaceStrokeColorFlyoutBrush}"
                                BoxShadow="0 4 10 0 #20000000" ClipToBounds="True">
                            <Grid RowDefinitions="140,*,Auto">
                                <!-- Hero Image / Placeholder -->
                                <Panel Grid.Row="0" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}">
                                    <Viewbox Stretch="Uniform" Margin="50" Opacity="0.2">
                                        <ui:SymbolIcon Symbol="Games"/>
                                    </Viewbox>
                                    
                                    <!-- Remove Button (Top Right) -->
                                    <Button HorizontalAlignment="Right" VerticalAlignment="Top" Margin="8"
                                            Command="{Binding $parent[UserControl].((vm:DashboardViewModel)DataContext).RemoveGameCommand}"
                                            CommandParameter="{Binding}"
                                            Theme="{DynamicResource TransparentButtonTheme}"
                                            Padding="4" ToolTip.Tip="Uninstall and remove from library"
                                            AutomationProperties.Name="Uninstall and remove from library">
                                        <ui:SymbolIcon Symbol="Dismiss" FontSize="14"/>
                                    </Button>

                                    <!-- Status Badges (Bottom of Hero) -->
                                    <StackPanel IsVisible="{Binding IsInstalled}"
                                                Orientation="Horizontal" Spacing="6"
                                                VerticalAlignment="Bottom" HorizontalAlignment="Left"
                                                Margin="10">
                                        <!-- Installed Badge -->
                                        <Border CornerRadius="4" Padding="8,4"
                                                Background="{DynamicResource SystemFillColorSuccessBrush}"
                                                BoxShadow="0 2 4 0 #40000000">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <ui:SymbolIcon Symbol="Checkmark" FontSize="10" Foreground="White"/>
                                                <TextBlock Text="INSTALLED" FontSize="10" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        
                                        <!-- Version Badge (Clickable for Update) -->
                                        <Button Padding="8,4" CornerRadius="4"
                                                Command="{Binding $parent[UserControl].((vm:DashboardViewModel)DataContext).UpdateOptiScalerCommand}"
                                                CommandParameter="{Binding}"
                                                ToolTip.Tip="Click to update version"
                                                Background="{DynamicResource AccentFillColorDefaultBrush}"
                                                BorderThickness="0"
                                                AutomationProperties.Name="Update version">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <ui:SymbolIcon Symbol="Sync" FontSize="10" Foreground="White"/>
                                                <TextBlock Text="{Binding CurrentVersion}" FontSize="10" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                    
                                    <!-- Folder Button (Top Left) -->
                                    <Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8"
                                            Command="{Binding $parent[UserControl].((vm:DashboardViewModel)DataContext).OpenGameFolderCommand}"
                                            CommandParameter="{Binding}"
                                            Theme="{DynamicResource TransparentButtonTheme}"
                                            Padding="4" ToolTip.Tip="Open Game Folder"
                                            AutomationProperties.Name="Open Game Folder">
                                        <ui:SymbolIcon Symbol="Folder" FontSize="14"/>
                                    </Button>
                                </Panel>

                                <!-- Content -->
                                <StackPanel Grid.Row="1" Margin="16,12,16,0" Spacing="4">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16" 
                                               TextTrimming="CharacterEllipsis" ToolTip.Tip="{Binding Name}"/>
                                    
                                    <TextBlock Text="{Binding GamePath}" FontSize="11" Opacity="0.5" 
                                               TextTrimming="CharacterEllipsis" ToolTip.Tip="{Binding GamePath}"/>
                                </StackPanel>

                                <!-- Actions -->
                                <Grid Grid.Row="2" Margin="16,0,16,16">
                                    <Button Content="Install" Classes="accent" HorizontalAlignment="Stretch"
                                            Command="{Binding $parent[UserControl].((vm:DashboardViewModel)DataContext).InstallOptiScalerCommand}"
                                            CommandParameter="{Binding}"
                                            IsVisible="{Binding !IsInstalled}"/>

                                    <Button Content="Config" HorizontalAlignment="Stretch"
                                            Command="{Binding $parent[UserControl].((vm:DashboardViewModel)DataContext).ConfigureGameCommand}"
                                            CommandParameter="{Binding}"
                                            IsVisible="{Binding IsInstalled}"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>