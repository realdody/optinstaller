<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Optinstaller.ViewModels"
             x:Class="Optinstaller.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">
    <StackPanel Margin="20" Spacing="20">
        <TextBlock Text="Settings" FontSize="24" FontWeight="Bold"/>
        
        <StackPanel Spacing="10">
            <TextBlock Text="Global Preferences" FontWeight="SemiBold"/>
            <CheckBox Content="Enable Overlay by Default" IsChecked="{Binding EnableOverlay}"/>
        </StackPanel>

        <StackPanel Spacing="10">
             <TextBlock Text="Download Source" FontWeight="SemiBold"/>
             <TextBox Text="{Binding OptiScalerDownloadUrl}"/>
        </StackPanel>
    </StackPanel>
</UserControl>